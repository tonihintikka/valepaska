{
  "name": "valepaska",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Valepaska card game engine with rule-based AI bots",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:bdd": "pnpm --filter @valepaska/core test:bdd",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "simulate": "pnpm --filter @valepaska/simulator start",
    "dev": "pnpm --filter @valepaska/web dev",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=22.0.0"
  }
}



